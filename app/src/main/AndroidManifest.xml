<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tutorial_v1">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name="Activity.CreateCourse" />
        <activity android:name="Activity.ConfirmEmailActivity" />
        <activity android:name="Activity.ConfimTokenActivity" />
        <activity android:name="Activity.PayActivity" />
        <activity android:name="Activity.CourseDetail" />
        <activity android:name="Activity.CourseByCategory" />
        <activity android:name="Activity.SearchResultActivity" />
        <activity android:name="Activity.UserPasswordChangeActivity" />
        <activity android:name="Activity.UserAvatarActivity" />
        <activity android:name="Activity.UserInfoActivity" />
        <activity android:name="Activity.ActiveAccountActivity" />
        <activity android:name="Activity.RegisterActivity" />
        <activity android:name="Activity.HomeScreenActivity" />
        <activity android:name="Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>